<%= form_with(model: train, local: true) do |form| %>
  <% if train.errors.any? %>
  <%= render 'common/error', resource: train %>
  <% end %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>
  <div class="field">
    <%= form.label :current_station, 'Current station' %>
    <%= form.collection_select :current_station_id, TrainStation.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :route, 'Route' %>
    <%= form.collection_select :route_id, Route.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :sort, 'Carriages order' %>
    <%= form.select :sort, options_for_select([['Head', 1], ['Tail', 0 ]]) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
