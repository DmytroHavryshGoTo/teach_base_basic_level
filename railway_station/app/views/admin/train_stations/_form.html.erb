<%= form_with(model: [:admin, train_station], local: true) do |form| %>
  <% if train_station.errors.any? %>
    <%= render 'common/error', resource: train_station %>
  <% end %>

  <div class="field">
    <%= form.label t('.title') %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: train_station.new_record? ? 'Создать' : 'Редактировать') %>
  </div>
<% end %>
